   <Accordion fx:id="accord" prefHeight="264.0" prefWidth="650.0">
     <panes>
       <TitledPane fx:id="dns1TitledPane" text="DNS 1 Settings">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="config-content">
                  <children>
                     <Label layoutX="30.0" layoutY="25.0" text="Protocol:">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <ComboBox fx:id="ComboBox_Scheme1" layoutX="105.0" layoutY="20.0" prefWidth="80.0" />
                     <Label layoutX="200.0" layoutY="25.0" text="IP Address:">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="TF_IP1" layoutX="285.0" layoutY="20.0" prefWidth="200.0" promptText="192.168.1.1" />
                     <Label layoutX="30.0" layoutY="70.0" text="Port:">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="TF_Port1" layoutX="105.0" layoutY="65.0" prefHeight="26.0" prefWidth="80.0" text="80" />
                     <Label layoutX="200.0" layoutY="70.0" text="(Default: 80)" styleClass="label-muted">
                        <font>
                           <Font size="10.0" />
                        </font>
                     </Label>
                     <Label layoutX="30.0" layoutY="115.0" text="App Password:">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="TF_AUTH1" layoutX="105.0" layoutY="110.0" prefHeight="26.0" prefWidth="477.0" promptText="Enter app password" />
                  </children></AnchorPane>
         </content>
       </TitledPane>
       <!--
         DNS 2 support intentionally disabled.
         User request: "no need for 2 DNS management, comment all code related to 2 DNSs"
       -->
      <TitledPane text="Widget Settings">
         <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="230.0" prefWidth="200.0" styleClass="config-content">
                  <children>
                     <Label layoutX="32.0" layoutY="29.0" text="Size:">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <ComboBox fx:id="ComboBoxSize" layoutX="93.0" layoutY="26.0" prefWidth="150.0" />
                     <Label layoutX="260.0" layoutY="30.0" text="(*)" styleClass="label-warning">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Label layoutX="28.0" layoutY="73.0" text="Layout:">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <ComboBox fx:id="ComboBoxLayout" layoutX="93.0" layoutY="69.0" prefWidth="150.0" />
                     <Label layoutX="260.0" layoutY="74.0" text="(*)" styleClass="label-warning">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <Label layoutX="28.0" layoutY="117.0" text="Theme:">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <ComboBox fx:id="ComboBoxTheme" layoutX="93.0" layoutY="113.0" prefWidth="150.0" />
                     <Label layoutX="276.0" layoutY="29.0" text="Status update (s):">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="tfUpdateStatus" layoutX="410.0" layoutY="24.0" prefWidth="70.0" promptText="5" />
                     <Label layoutX="276.0" layoutY="73.0" text="Fluid update (s):">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="tfUpdateFluid" layoutX="410.0" layoutY="68.0" prefWidth="70.0" promptText="15" />
                     <Label layoutX="276.0" layoutY="117.0" text="Active update (s):">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="tfUpdateActive" layoutX="410.0" layoutY="112.0" prefWidth="70.0" promptText="60" />
                     <Label layoutX="276.0" layoutY="161.0" text="Top domains update (s):">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="tfUpdateTopX" layoutX="410.0" layoutY="156.0" prefWidth="70.0" promptText="5" />
                  </children>
               </AnchorPane>
         </content>
       </TitledPane>
     </panes>
   </Accordion>
   <Button fx:id="button_apply" layoutX="500.0" layoutY="272.0" mnemonicParsing="false" styleClass="btn-primary" text="Apply">
      <tooltip>
         <Tooltip text="Save, apply changes, and close settings" />
      </tooltip>
   </Button>
   <Button fx:id="button_load" layoutX="430.0" layoutY="272.0" mnemonicParsing="false" styleClass="btn-secondary" text="Load">
      <tooltip>
         <Tooltip text="Load settings from the configuration file" />
      </tooltip>
   </Button>
   <Button fx:id="button_save" layoutX="360.0" layoutY="272.0" mnemonicParsing="false" styleClass="btn-success" text="Save">
      <tooltip>
         <Tooltip text="Save settings to the configuration file" />
      </tooltip>
   </Button>
   <Button fx:id="button_cancel" layoutX="570.0" layoutY="272.0" mnemonicParsing="false" styleClass="btn-danger" text="Cancel">
      <tooltip>
         <Tooltip text="Close without saving changes" />
      </tooltip>
   </Button>
   <Label layoutX="14.0" layoutY="279.0" text="Setting with (*) need a Restart" styleClass="label-muted">
      <font>
         <Font size="10.0" />
      </font>
   </Label>
</Pane>
