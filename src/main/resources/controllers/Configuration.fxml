<VBox fx:id="configRootPane" minHeight="350.0" minWidth="550.0" prefHeight="550.0" prefWidth="850.0" spacing="10" styleClass="config-root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>

   <Accordion fx:id="accord" VBox.vgrow="ALWAYS">
      <panes>
         <TitledPane fx:id="dns1TitledPane" text="DNS 1 Settings">
            <content>
               <ScrollPane fitToHeight="true" fitToWidth="true">
                  <AnchorPane minHeight="220.0" minWidth="0.0" prefHeight="220.0" styleClass="config-content">
                     <children>
                        <Label layoutX="30.0" layoutY="15.0" text="Platform:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="ComboBox_Platform1" layoutX="120.0" layoutY="10.0" prefHeight="39.0" prefWidth="226.0" />
                        <Label layoutX="354.0" layoutY="16.0" styleClass="label-muted" text="(Pi-hole or AdGuard Home)">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label layoutX="30.0" layoutY="55.0" text="Protocol:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="ComboBox_Scheme1" layoutX="120.0" layoutY="50.0" prefHeight="39.0" prefWidth="150.0" />
                        <Label layoutX="287.0" layoutY="55.0" text="IP Address:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TF_IP1" layoutX="406.0" layoutY="50.0" prefWidth="200.0" promptText="192.168.1.1" AnchorPane.rightAnchor="222.0" />
                        <Label layoutX="30.0" layoutY="100.0" text="Port:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TF_Port1" layoutX="120.0" layoutY="95.0" prefHeight="26.0" prefWidth="80.0" text="80" />
                        <Label layoutX="220.0" layoutY="100.0" styleClass="label-muted" text="(Default: 80)">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="Label_Username1" layoutX="30.0" layoutY="145.0" managed="false" text="Username:" visible="false">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TF_Username1" layoutX="120.0" layoutY="140.0" managed="false" prefHeight="26.0" prefWidth="180.0" promptText="admin" visible="false" />
                        <Label fx:id="Label_Password1" layoutX="30.0" layoutY="185.0" text="App Password:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TF_AUTH1" layoutX="120.0" layoutY="174.0" prefHeight="26.0" promptText="Enter app password" AnchorPane.rightAnchor="484.0" />
                     </children>
                  </AnchorPane>
               </ScrollPane>
            </content>
         </TitledPane>
         <!--
         DNS 2 support intentionally disabled.
         User request: "no need for 2 DNS management, comment all code related to 2 DNSs"
       -->
         <TitledPane text="Widget Settings">
            <content>
               <ScrollPane fitToHeight="true" fitToWidth="true">
                  <AnchorPane minHeight="200.0" minWidth="0.0" prefHeight="200.0" styleClass="config-content">
                     <children>
                        <Label layoutX="32.0" layoutY="29.0" text="Size:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="ComboBoxSize" layoutX="93.0" layoutY="26.0" prefWidth="150.0" />
                        <Label layoutX="260.0" layoutY="30.0" styleClass="label-warning" text="(*)">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <Label layoutX="28.0" layoutY="73.0" text="Layout:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="ComboBoxLayout" layoutX="93.0" layoutY="69.0" prefWidth="150.0" />
                        <Label layoutX="260.0" layoutY="74.0" styleClass="label-warning" text="(*)">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <Label layoutX="28.0" layoutY="117.0" text="Theme:">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="ComboBoxTheme" layoutX="93.0" layoutY="113.0" prefWidth="150.0" />
                        <Label layoutX="296.0" layoutY="29.0" text="Status update (s):">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfUpdateStatus" layoutX="430.0" layoutY="24.0" prefWidth="70.0" promptText="5" />
                        <Label layoutX="296.0" layoutY="73.0" text="Fluid update (s):">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfUpdateFluid" layoutX="430.0" layoutY="68.0" prefWidth="70.0" promptText="15" />
                        <Label layoutX="296.0" layoutY="117.0" text="Active update (s):">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfUpdateActive" layoutX="430.0" layoutY="112.0" prefWidth="70.0" promptText="60" />
                        <Label layoutX="534.0" layoutY="30.0" text="Top domains update (s):">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfUpdateTopX" layoutX="724.0" layoutY="24.0" prefWidth="70.0" promptText="5" />
                     </children>
                  </AnchorPane>
               </ScrollPane>
            </content>
         </TitledPane>
      </panes>
   </Accordion>

   <!-- Button bar at bottom -->
   <HBox alignment="CENTER_RIGHT" spacing="10">
      <Label styleClass="label-muted" text="Setting with (*) need a Restart" HBox.hgrow="ALWAYS">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <Region HBox.hgrow="ALWAYS" />
      <Button fx:id="button_save" mnemonicParsing="false" styleClass="btn-success" text="Save">
         <tooltip>
            <Tooltip text="Save settings to the configuration file" />
         </tooltip>
      </Button>
      <Button fx:id="button_load" mnemonicParsing="false" styleClass="btn-secondary" text="Load">
         <tooltip>
            <Tooltip text="Load settings from the configuration file" />
         </tooltip>
      </Button>
      <Button fx:id="button_apply" mnemonicParsing="false" styleClass="btn-primary" text="Apply">
         <tooltip>
            <Tooltip text="Save, apply changes, and close settings" />
         </tooltip>
      </Button>
      <Button fx:id="button_cancel" mnemonicParsing="false" styleClass="btn-danger" text="Cancel">
         <tooltip>
            <Tooltip text="Close without saving changes" />
         </tooltip>
      </Button>
   </HBox>
</VBox>
